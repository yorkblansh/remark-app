generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id       Int            @id @default(autoincrement())
    email    String         @unique
    password String
    login    String?        @unique
    files    UsersOnFiles[]
}

model File {
    id           Int            @id @default(autoincrement())
    name         String
    UsersOnFiles UsersOnFiles[]
}

model UsersOnFiles {
    file   File @relation(fields: [fileId], references: [id])
    fileId Int // relation scalar field (used in the `@relation` attribute above)

    user   User @relation(fields: [userId], references: [id])
    userId Int // relation scalar field (used in the `@relation` attribute above)

    userAbility String
    assignedAt  DateTime @default(now())
    assignedBy  String

    @@id([fileId, userId])
}
